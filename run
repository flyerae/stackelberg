if [ $(pidof rmiregistry) ]                                                     
then                                                                            
  echo "Running"
else                                                                            
  rmiregistry &
fi   

CLASSPATH="-cp .:libs/*:classes/"
OPTIONS="-Djava.rmi.server.hostname=127.0.0.1 "

java $CLASSPATH $OPTIONS comp34120.ex2.Main &
sleep 2
rm -rf classes/*
javac $CLASSPATH -d classes/ src/*
java $CLASSPATH $OPTIONS Leader
